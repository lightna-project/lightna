{
    "config": {
        "process-timeout": 0
    },
    "require": {
        "laminas/laminas-db": "^2.20"
    },
    "scripts": {
        "lightna.build": [
            "./cli build.compile",
            "npm run build",
            "./cli build.asset.sign",
            "./cli build.apply",
            "./cli update",
            "./cli index.update.all"
        ],
        "lightna.test.unit": "vendor/bin/phpunit -c `./cli config compiler_dir`/build/phpunit/config.unit.xml",
        "lightna.test.integration": "vendor/bin/phpunit -c `./cli config compiler_dir`/build/phpunit/config.integration.xml"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    }
}
