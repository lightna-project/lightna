{
    "name": "lightna-magento-frontend",
    "private": true,
    "devDependencies": {
        "deepmerge": "^4.3.1",
        "postcss-import": "^16.1.0",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "tailwindcss": "^3.4.3",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4"
    },
    "scripts": {
        "update": "npm run update-js && npm run update-css",
        "update-js": "webpack --config webpack.config.direct.js && ./cli build.asset.sign --direct",
        "update-css": "`./cli config compiler_dir`/build/tailwind/update.sh && ./cli build.asset.sign --direct",
        "build": "npm run build-js && npm run build-css",
        "build-js": "./cli build.validate && webpack && ./cli build.asset.sign",
        "build-css": "./cli build.validate && `./cli build.config compiler_dir`/building/tailwind/build.sh && ./cli build.asset.sign",
        "watch-js": "webpack --mode=development --config webpack.config.direct.js",
        "watch-common-css": "npx tailwindcss -i `./cli config compiler_dir`/build/tailwind/common/entry.css -o `./cli config asset_dir`/build/style/common.css -- --watch --verbose",
        "watch-lane-css": "npx tailwindcss -i `./cli config compiler_dir`/build/tailwind/lane/entry.css -o `./cli config asset_dir`/build/style/lane.css  -- --watch --verbose"
    }
}
